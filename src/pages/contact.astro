---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Kontak Pusat Edukasi Slot Online',
};

---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText tagline="Kontak" title="Ingin diskusi soal slot online?" />

  <ContactUs
    id="form"
    title="Kirim pesan ke tim edukasi"
    subtitle="Silakan hubungi kami untuk saran konten, koreksi informasi seputar slot online/gacor, atau berbagi pengalaman ketika kebiasaan bermain mulai terasa berlebihan. Kami tidak melayani permintaan link situs ataupun rekomendasi bandar."
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Nama',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Email',
      },
    ]}
    textarea={{
      label: 'Pesan',
    }}
    disclaimer={{
      label:
        'Dengan mengirim formulir ini, kamu setuju bahwa pesanmu digunakan untuk keperluan edukasi dan perbaikan konten, bukan untuk layanan perjudian.',
    }}
    description="Kami berusaha merespons dalam 24 jam kerja. Jika pesanmu terkait bantuan darurat soal kecanduan judi, segera cari bantuan profesional di daerahmu."
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Kapan sebaiknya kamu menghubungi kami?"
    items={[
      {
        title: 'Pertanyaan materi edukasi',
        description:
          'Jika ada istilah slot online, gacor, RTP, atau tips menang banyak yang ingin kamu klarifikasi atau minta penjelasan lebih rinci.',
      },
      {
        title: 'Saran & koreksi konten',
        description:
          'Kalau kamu menemukan informasi yang kurang tepat atau punya ide topik edukasi baru untuk membantu pemain lain.',
      },
      {
        title: 'Berbagi pengalaman pribadi',
        description:
          'Kamu boleh membagikan cerita tentang bagaimana slot online memengaruhi hidupmu, baik soal menang banyak maupun kerugian, untuk jadi bahan belajar bersama.',
      },
      {
        title: 'Tanda-tanda kecanduan',
        description:
          'Kalau kamu mulai merasa sulit berhenti bermain atau memakai uang kebutuhan, kami bisa mengarahkan ke sumber bantuan profesional (bukan layanan terapi langsung).',
        icon: 'tabler:headset',
      },
      {
        title: 'Email',
        description: 'support@edukasi-slot.online',
        icon: 'tabler:mail',
      },
      {
        title: 'Catatan penting',
        description:
          'Kami tidak menjawab permintaan link situs slot, bocoran room gacor, atau pola menang instan apa pun.',
        icon: 'tabler:map-pin',
      },
    ]}
  />
</Layout>
