---
import Features2 from '~/components/widgets/Features2.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Hero from '~/components/widgets/Hero.astro';
import Stats from '~/components/widgets/Stats.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'Tentang Pusat Edukasi Slot Online Gacor',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="Tentang kami"
    image={{
      src: 'https://images.unsplash.com/photo-1559136555-9303baea8ebd?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Caos Image',
    }}
  >
    <Fragment slot="title">
      Pusat edukasi <br />
      <span class="text-accent dark:text-white">slot online &amp; gacor yang bertanggung jawab</span>
    </Fragment>

    <Fragment slot="subtitle">
      Kami mengumpulkan materi seputar slot online, istilah gacor, dan harapan menang banyak, lalu membahasnya dengan
      bahasa yang sederhana dan jujur. Fokus kami adalah edukasi dan kesehatan finansial pemain, bukan promosi situs judi
      atau ajakan bermain.
    </Fragment>
  </Hero>

  <!-- Stats Widget ****************** -->

  <Stats
    title="Sekilas angka komunitas"
    stats={[
      { title: 'Pembaca aktif', amount: '12K+' },
      { title: 'Sesi simulasi modal', amount: '3.5K' },
      { title: 'Artikel edukasi slot online', amount: '48' },
      { title: 'Negara pembaca', amount: '10+' },
    ]}
  />

