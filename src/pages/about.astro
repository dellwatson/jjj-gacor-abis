    isBeforeContent={true}
    items={[
      {
        title: 'Dasar slot online',
        description:
          'Menjelaskan cara kerja mesin slot, RNG, simbol, paylines, hingga fitur bonus agar pemain paham dari mana datangnya menang dan kalah.',
        icon: 'tabler:template',
      },
      {
        title: 'Slot gacor &amp; realita',
        description:
          'Membedah arti istilah slot online gacor, pola jam gacor, dan seberapa besar peran keberuntungan dibanding klaim pola pasti.',
        icon: 'tabler:template',
      },
      {
        title: 'Menang banyak secara sehat',
        description:
          'Mengulas harapan menang besar sambil tetap menjaga batas modal, emosi, dan kewajiban finansial di dunia nyata.',
        icon: 'tabler:template',
      },
    ]}
  />

  <!-- Features3 Widget ************** -->

  <Features3
    columns={3}
    isAfterContent={true}
    items={[
      {
        title: 'RTP &amp; volatilitas',
